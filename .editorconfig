# EditorConfig configuration for mkinitcpio-ykfde
# http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines without trailing whitespaces,
# but with a newline ending every file, utf-8 charset
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# set indent to tabs with width of eight
[*.{c,h}]
indent_style = tab
indent_size = 8
